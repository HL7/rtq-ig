{
  "resourceType": "StructureDefinition",
  "id": "RegulatoryQANarrativeProfile",
  "url": "http://hl7.org/fhir/uv/rtq/StructureDefinitionRegulatoryQANarrativeProfile",
  "version": "0.1.0",
  "name": "RegulatoryQANarrativeProfile",
  "title": "Regulatory QA Narrative Questionnaire Profile",
  "status": "draft",
  "experimental": true,
  "date": "2025-11-19",
  "publisher": "HL7 International - Biomedical Research and Regulation Work Group",
  "contact": [
    {
      "name": "HL7 BR&R Work Group",
      "telecom": [
        {
          "system": "url",
          "value": "https://hl7.org/Special/committees/brr"
        }
      ]
    }
  ],
  "description": "Constrained Questionnaire profile for regulatory quality-assurance questions that are purely narrative with optional attachments. Uses human-readable hierarchical numbering in prefix, UUIDs in linkId, and requires CTD section coding.",
  "fhirVersion": "5.0.0",
  "kind": "resource",
  "abstract": false,
  "type": "Questionnaire",
  "baseDefinition": "http://hl7.org/fhir/uv/rtq/StructureDefinition/RegulatoryQuestionnaire",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "Questionnaire",
        "path": "Questionnaire"
      },
      {
        "id": "Questionnaire.identifier",
        "path": "Questionnaire.identifier",
        "min": 1
      },
      {
        "id": "Questionnaire.version",
        "path": "Questionnaire.version",
        "min": 1
      },
      {
        "id": "Questionnaire.status",
        "path": "Questionnaire.status",
        "min": 1
      },
      {
        "id": "Questionnaire.subjectType",
        "path": "Questionnaire.subjectType",
        "fixedCode": [
          "MedicinalProductDefinition"
        ]
      },
      {
        "id": "Questionnaire.item.linkId",
        "path": "Questionnaire.item.linkId",
        "min": 1,
        "patternString": "^urn:uuid:[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
      },
      {
        "id": "Questionnaire.item.prefix",
        "path": "Questionnaire.item.prefix"
      },
      {
        "id": "Questionnaire.item.code",
        "path": "Questionnaire.item.code",
        "min": 1,
        "binding": {
          "strength": "required",
          "valueSet": "http://hl7.org/fhir/uv/rtq/ValueSet/ctd-categories-full"
        }
      },
      {
        "id": "Questionnaire.item.type",
        "path": "Questionnaire.item.type"
      },
      {
        "id": "Questionnaire.item.type.constraint",
        "path": "Questionnaire.item.type",
        "key": "rtq-1",
        "severity": "error",
        "human": "Item type must be group, display, text or attachment",
        "expression": "value.memberOf('http://hl7.org/fhir/ValueSet/item-type|5.0.0', 'group', 'display', 'text', 'attachment')"
      },
      {
        "id": "Questionnaire.item:item.group",
        "path": "Questionnaire.item.item",
        "sliceName": "group",
        "min": 0,
        "max": "*",
        "type": [
          {
            "code": "Group"
          }
        ]
      },
      {
        "id": "Questionnaire.item.item",
        "path": "Questionnaire.item.item",
        "slicing": {
          "discriminator": [
            {
              "type": "value",
              "path": "type"
            }
          ],
          "rules": "open"
        }
      },
      {
        "id": "Questionnaire.item.item.display",
        "path": "Questionnaire.item.item",
        "sliceName": "display",
        "min": 0,
        "max": "*",
        "type": [
          {
            "code": "display"
          }
        ]
      },
      {
        "id": "Questionnaire.item.item.text",
        "path": "Questionnaire.item.item",
        "sliceName": "text",
        "min": 0,
        "max": "1",
        "type": [
          {
            "code": "text"
          }
        ]
      },
      {
        "id": "Questionnaire.item.item.attachment",
        "path": "Questionnaire.item.item",
        "sliceName": "attachment",
        "min": 0,
        "max": "*",
        "type": [
          {
            "code": "attachment"
          }
        ]
      },
      {
        "id": "Questionnaire.item.extension:itemControl",
        "path": "Questionnaire.item.extension",
        "sliceName": "itemControl",
        "min": 0,
        "max": "*",
        "type": [
          {
            "code": "Extension",
            "profile": [
              "http://hl7.org/fhir/StructureDefinition/questionnaire-itemControl"
            ]
          }
        ],
        "mustSupport": true
      },
      {
        "id": "Questionnaire.item.extension:hidden",
        "path": "Questionnaire.item.extension",
        "sliceName": "hidden",
        "max": "1",
        "type": [
          {
            "code": "Extension",
            "profile": [
              "http://hl7.org/fhir/StructureDefinition/questionnaire-hidden"
            ]
          }
        ],
        "mustSupport": true
      }
    ]
  }
}